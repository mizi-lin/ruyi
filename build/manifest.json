{
  "manifest_version": 3,
  "default_locale": "zh_CN",
  "name": "__MSG_extensionName__",
  "version": "0.2.0",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "tabGroups",
    "history",
    "favicon"
  ],
  "optional_permissions": [
    "offscreen",
    "desktopCapture",
    "alarms"
  ],
  "background": {
    "service_worker": "src/pages/background/index.js",
    "type": "module"
  },
  "action": {
    "default_icon": "ruyi-34.png"
  },
  "commands": {
    "open-search": {
      "suggested_key": {
        "default": "Alt+Y"
      },
      "description": "open search"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "icons": {
    "128": "ruyi-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "src/pages/content-script/index.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/*.js",
        "assets/css/*.css",
        "ruyi-128.png",
        "ruyi-34.png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}