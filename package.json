{
    "name": "ruyi",
    "version": "0.2.3",
    "description": "如意如意，随我心意",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/RevewAI/ruyi.git"
    },
    "scripts": {
        "build": "tsc --noEmit && vite build",
        "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
        "build:watch": "cross-env __DEV__=true vite build -w --mode development",
        "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
        "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
        "wss": "node utils/reload/initReloadServer.js",
        "dev": "yarn build:hmr && (run-p wss build:watch)",
        "dev:firefox": "yarn build:hmr && (run-p wss build:firefox:watch)",
        "test": "vitest",
        "commitlint": "commitlint --edit",
        "lint": "eslint src --ext .ts,.js,.tsx,.jsx",
        "lint:fix": "yarn lint --fix",
        "prettier": "prettier . --write",
        "prepare": "husky install",
        "zip": "rm -rf ruyi.zip && zip -pr ruyi.zip ./build"
    },
    "type": "module",
    "dependencies": {
        "@ant-design/icons": "5.3.6",
        "add": "^2.0.6",
        "antd": "^5.17.0",
        "axios": "^1.6.8",
        "cheerio": "^1.0.0-rc.12",
        "classnames": "^2.5.1",
        "construct-style-sheets-polyfill": "3.1.0",
        "dayjs": "1.11.11",
        "jsencrypt": "3.3.2",
        "localforage": "1.10.0",
        "lodash-es": "4.17.21",
        "numeral": "2.0.6",
        "react": "18.3.1",
        "react-beautiful-dnd": "^13.1.1",
        "react-dom": "18.3.1",
        "react-error-boundary": "4.0.13",
        "react-helmet-async": "2.0.5",
        "react-highlight-element": "^1.0.6",
        "react-hotkeys-hook": "^4.5.0",
        "react-masonry-component": "^6.3.0",
        "react-router": "6.23.0",
        "react-router-dom": "6.23.0",
        "recoil": "0.7.7",
        "recoil-nexus": "0.5.0",
        "recoil-sync": "0.2.0",
        "tinycolor2": "^1.6.0",
        "webextension-polyfill": "0.11.0",
        "yarn": "^1.22.22"
    },
    "devDependencies": {
        "@commitlint/cli": "19.3.0",
        "@commitlint/config-conventional": "19.2.2",
        "@rollup/plugin-sucrase": "5.0.2",
        "@rollup/plugin-typescript": "11.1.6",
        "@testing-library/react": "15.0.6",
        "@types/add": "^2",
        "@types/chrome": "0.0.267",
        "@types/lodash-es": "^4.17.12",
        "@types/node": "20.12.10",
        "@types/react": "18.3.1",
        "@types/react-beautiful-dnd": "^13.1.8",
        "@types/react-dom": "18.3.0",
        "@types/tinycolor2": "^1",
        "@types/ws": "8.5.10",
        "@typescript-eslint/eslint-plugin": "7.8.0",
        "@typescript-eslint/parser": "7.8.0",
        "@vitejs/plugin-react": "4.2.1",
        "chokidar": "3.6.0",
        "click-to-react-component": "1.1.0",
        "cross-env": "7.0.3",
        "eslint": "9.2.0",
        "eslint-config-airbnb-typescript": "18.0.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-jsx-a11y": "6.8.0",
        "eslint-plugin-prettier": "5.1.3",
        "eslint-plugin-react": "7.34.1",
        "eslint-plugin-react-hooks": "4.6.2",
        "fs-extra": "11.2.0",
        "husky": "9.0.11",
        "less": "4.2.0",
        "less-loader": "12.2.0",
        "lint-staged": "15.2.2",
        "magic-string": "0.30.10",
        "npm-run-all": "4.1.5",
        "prettier": "3.2.5",
        "rollup": "4.17.2",
        "ts-loader": "9.5.1",
        "tslib": "2.6.2",
        "typescript": "5.4.5",
        "unplugin-auto-import": "^0.17.5",
        "unplugin-auto-import-antd": "^0.0.2",
        "vite": "5.2.11",
        "vite-bundle-analyzer": "^0.9.4",
        "vite-plugin-compression": "0.5.1",
        "vite-plugin-svgr": "^4.2.0",
        "vitest": "1.6.0",
        "ws": "8.17.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "packageManager": "yarn@4.1.1"
}
